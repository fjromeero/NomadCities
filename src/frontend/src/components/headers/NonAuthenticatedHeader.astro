---
import AppLogo from "../AppLogo.astro";
import DropDownIcon from "../dropdown/DropDownIcon"
import DropDownMenu from "../dropdown/DropDownMenu"
import DropDownItem from "../dropdown/DropDownItem"
---

<header id="non-authenticated-header" class="auth-max:pl-8 auth-max:pr-6 py-8 pl-14 pr-10 bg-black flex justify-between">
    <AppLogo/>
    <DropDownIcon client:only>
        <DropDownMenu>
            <DropDownItem url="/signup">
                Register
            </DropDownItem>
            <DropDownItem url="/login">
                Log In
            </DropDownItem>
        </DropDownMenu>
    </DropDownIcon>
</header>